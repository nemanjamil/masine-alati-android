<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableEnd="@mipmap/ic_chainsaw"
        android:drawableRight="@mipmap/ic_chainsaw"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/text_web_site"
        android:textColor="@color/primary"
        android:textSize="30sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/edit_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/sender_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:textColor="@color/primary_dark"
            android:textSize="20sp"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:backgroundTint="@color/primary_dark"


            android:layout_marginStart="@dimen/edt_margin"
            android:layout_marginEnd="@dimen/edt_margin"

            android:textCursorDrawable="@drawable/color_cursor_primary_dark"
            />

        <EditText
            android:id="@+id/question_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:gravity="top"
            android:hint="@string/question_txt"

            android:inputType="textMultiLine"
            android:lines="5"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textColor="@color/primary_dark"
            android:textSize="21sp"


            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:backgroundTint="@color/primary_dark"

            android:layout_marginStart="@dimen/edt_margin"
            android:layout_marginEnd="@dimen/edt_margin"

            android:textCursorDrawable="@drawable/color_cursor_primary_dark"
            />

